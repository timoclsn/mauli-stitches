{
    "name": "mauli-stitches",
    "version": "0.2.0",
    "description": "Experimental Mauli Design System implementation with stitches.",
    "keywords": [
        "Design System",
        "React",
        "Component Library"
    ],
    "homepage": "https://timoclasen.de",
    "bugs": {
        "url": "https://github.com/timoclsn/mauli-stitches/issues",
        "email": "timo@timoclasen.de"
    },
    "author": {
        "name": "Timo Clasen",
        "email": "timo@timoclasen.de",
        "url": "https://timoclasen.de"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/timoclsn/mauli-stitches.git"
    },
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "files": [
        "dist"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "ds:build": "rollup -c",
        "ds:watch": "rollup -c -w",
        "ds:release": "npm run ds:build && np"
    },
    "dependencies": {
        "@radix-ui/colors": "^0.1.7",
        "@radix-ui/react-id": "0.1.1",
        "@radix-ui/react-polymorphic": "0.0.14",
        "@stitches/react": "^1.2.5",
        "leading-trim": "^1.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.15.8",
        "@storybook/addon-actions": "^6.3.12",
        "@storybook/addon-essentials": "^6.3.12",
        "@storybook/addon-links": "^6.3.12",
        "@storybook/react": "^6.3.12",
        "@types/react": "^17.0.30",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "babel-loader": "^8.2.2",
        "eslint": "^8.0.1",
        "eslint-config-next": "^11.1.2",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.2",
        "lint-staged": "^11.2.3",
        "next": "^11.1.2",
        "np": "^7.5.0",
        "prettier": "^2.4.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-feather": "^2.0.9",
        "rollup": "^2.58.0",
        "rollup-plugin-typescript2": "^0.30.0",
        "typescript": "^4.4.4"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx,css,md,json}": [
            "npm run format",
            "eslint --fix .",
            "git add"
        ]
    }
}
